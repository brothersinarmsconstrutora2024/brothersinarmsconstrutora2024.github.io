Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

/* Controle de Cache */
Cache-Control: public, max-age=86400

/* Proteção XSS */
X-XSS-Protection: 1; mode=block

/* Política de Segurança de Conteúdo */
Content-Security-Policy: default-src 'self'; script-src 'self' https://snap.licdn.com https://www.googletagmanager.com; 
img-src 'self' data: https://px.ads.linkedin.com; style-src 'self' 'unsafe-inline'; 
connect-src 'self' https://formsubmit.co https://www.google-analytics.com https://wa.me;

/* Permissões de Referrer */
Referrer-Policy: no-referrer-when-downgrade

/* Headers para Melhor SEO */
X-Frame-Options: DENY

/* Configuração de tipo de conteúdo */
X-Content-Type-Options: nosniff
