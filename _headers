/* Forçar redirecionamento HTTPS */
Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

/* Configuração de segurança */
X-Frame-Options: DENY
X-Content-Type-Options: nosniff
Referrer-Policy: no-referrer-when-downgrade
Content-Security-Policy: default-src 'self'; img-src 'self' https://*; script-src 'self' 'unsafe-inline' https://snap.licdn.com https://*.google-analytics.com https://*.googletagmanager.com; style-src 'self' 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com;

/* Compressão GZIP */
Content-Encoding: gzip

/* Cache para arquivos estáticos */
# Imagens
/images/* Cache-Control: public, max-age=31536000
# CSS e JS
/styles/* Cache-Control: public, max-age=31536000
/scripts/* Cache-Control: public, max-age=31536000
# PDFs
/docs/* Cache-Control: public, max-age=31536000

/* Redirecionamento automático para HTTPS */
https://* https://%{HTTP_HOST}%{REQUEST_URI} 301!
